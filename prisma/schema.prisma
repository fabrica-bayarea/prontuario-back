// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Turnos {
  Matutino
  Vespertino
  Noturno
  Integral
}

// Definição do modelo de Curso
model Curso {
  id          Int        @id @default(autoincrement())
  nome        String     @unique
  turno       Turnos
  coordenador String
  programas   Programa[]
}

// Definição do modelo de Programa Social
model Programa {
  id           Int           @id @default(autoincrement())
  nome         String        @unique
  descricao    String
  inicio       DateTime
  termino      DateTime
  horario      String
  publicoAlvo  String
  cursos       Curso[]
  atendimentos Atendimento[]
}

enum TipoUsuario {
  ADMINISTRADOR
  BENEFICIARIO
  CADASTRADOR
}

// Definição do modelo de Usuário
model Usuario {
  id           Int           @id @default(autoincrement())
  nome         String
  sobrenome    String
  cpf          String        @unique
  email        String        @unique
  telefone     String?       @unique
  cidade       String
  cep          String 
  endereco     String 
  hash         String
  tipo         TipoUsuario
  atendimentos Atendimento[] @relation("UsuarioAtendimentos")
  beneficiarioAtendimentos Atendimento[] @relation("BeneficiadorAtendimentos")
}

// Definição do modelo de Atendimento
model Atendimento {
  id             Int          @id @default(autoincrement())
  data           DateTime
  beneficiario   Usuario      @relation("BeneficiadorAtendimentos", fields: [beneficiarioId], references: [id])
  beneficiarioId Int
  usuario        Usuario      @relation("UsuarioAtendimentos", fields: [usuarioId], references: [id])
  usuarioId      Int
  programa       Programa     @relation(fields: [programaId], references: [id])
  programaId     Int
}
