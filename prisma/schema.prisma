// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Definição do modelo de Curso
model Curso {
  id        Int      @id @default(autoincrement())
  nome      String
  programas Programa[]
}

// Definição do modelo de Programa Social
model Programa {
  id            Int          @id @default(autoincrement())
  nome          String
  curso         Curso        @relation(fields: [cursoId], references: [id])
  cursoId       Int
  atendimentos  Atendimento[]
}

enum TipoUsuario {
    ADMINISTRADOR
    CADASTRADOR
}

// Definição do modelo de Usuário
model Usuario {
  id             Int            @id @default(autoincrement())
  nome           String
  email          String         @unique
  telefone       String?        @unique
  hash           String
  tipo           TipoUsuario 
  atendimentos   Atendimento[]  // Atendimentos criados pelo usuário
}

enum TipoBeneficiario {
    BENEFICIARIO
}

// Definição do modelo de Beneficiário
model Beneficiario {
  id       Int      @id @default(autoincrement())
  nome     String
  cpf      String   @unique
  email    String   @unique
  telefone String   @unique
  tipo     TipoBeneficiario 
  hash     String
}

// Definição do modelo de Atendimento
model Atendimento {
  id        Int      @id @default(autoincrement())
  data      DateTime
  usuario   Usuario  @relation(fields: [usuarioId], references: [id])
  usuarioId Int
  programa  Programa @relation(fields: [programaId], references: [id])
  programaId Int
}
